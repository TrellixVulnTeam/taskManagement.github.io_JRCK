{{>header}}
{{>slidebar}}
<div id='edit-issueType' class="edit-issueType">
    <div class="content-wrapper-header">
        <p> Edit Issue Type</p>
    </div>

    <div class="content-board-main" style="margin: 30px;">
        <form method="POST" {{#if isFormAdd}}action="/issueTypes/store" {{/if}} {{#unless
            isFormAdd}}action="/issueTypes/{{issueType._id}}?_method=PUT" {{/unless}}
            style="background-color: #fff; padding: 20px">
            <div class="col-lg-12 board-main-content">
                <div class="row board-main-row">
                    <div class="col-md-12">
                        <div class="callout callout-info">
                            <div class="col-md-12">
                                <div class="row board-main">
                                    <div class="col-sm-6" style="padding-right: 1em">

                                        <div class="input-add-issueType">
                                            <label for="issueTypeName" class="form-label">Issue Type Name</label>
                                            <input type="text" class="form-control inputIssue Type"
                                                value='{{issueType.issueTypeName}}' id="issueTypeName"
                                                name="issueTypeName" style="margin: 0 0 0 20px !important;">
                                        </div>
                                    </div>

                                    <div class="col-md-6" style="padding-left: 1em">

                                        <div class="input-add-issueType">
                                            <label for="description" class="form-label">Description</label>
                                            <textarea type="text" class="form-control inputIssue Type" id="description"
                                                name="description"
                                                style="height: 100px; margin: 0 0 0 20px !important;"> {{issueType.description}}</textarea>
                                        </div>

                                        <button type="submit" class="btn btn-primary"
                                            style="float: right; margin-top: 45px">Save</button>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
        </form>

    </div>
</div>

<style>
    .direc,
    #item-menu-direc {
        background-color: #f0f0f0 !important;
        color: #4c7ebf !important;
    }
</style>

