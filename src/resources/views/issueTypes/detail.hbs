    }

    .board-main-row {
        background: #fff;
        padding: 20px 30px;
        color: rgb(33, 37, 41);
        display: inline-block;


    }

    .board-main {
        display: flex;
    }

    .board-main-content {
        display: grid;
    }

    .detail-issueType {
        display: flex;

    }

    .detail-issueType-col1,
    .detail-issueType-col2 {
        color: rgb(33, 37, 41);
        border-radius: .25rem;
        border-top: 3px solid #28a745;
        box-shadow: 0 0 1px rgb(0 0 0 / 13%), 0 1px 3px rgb(0 0 0 / 20%);

    }

    .detail-issueType-col1 {
        margin: 25px 0px 20px 30px;
    }

    .detail-issueType-col2 {
        margin: 25px 20px 20px 0px;
