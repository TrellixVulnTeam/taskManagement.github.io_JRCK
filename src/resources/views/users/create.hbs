{{>header}}
{{>slidebar}}
<div id = 'add-new-user' class="add-new-task">
            <div class="content-wrapper-header">
                <p> New User</p>
            </div>

            <div class="content-board-main" style="margin: 30px">
                <form method="POST" action="/users/store" style="background-color: #fff; padding: 20px">
                   <div class="col-lg-12 board-main-content" >    
                        <div class="row board-main-row">
                            <div class="col-md-12">
                                <div class="callout callout-info">
                                    <div class="col-md-12">
                                        <div class="row board-main">
                                            <div class="col-sm-6">
                                            <div class="input-add-user">
                        <label for="userId" class="form-label">User ID</label>
                        <input type="text" class="form-control inputTask" id="userId" name="userId">
                    </div>

                    <div class="input-add-user">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control inputTask" id="fullName" name="fullName">
                    </div>

                    <div class="form-group input-add-user">
                        <label for="gender" class="form-label">Gender</label>
                        <select name="gender" id="gender" class="custom-select custom-select-sm inputTask" style="border: 1px solid #ced4da;border-radius: .25rem;box-shadow: inset 0 1px 2px rgb(0 0 0 / 8%); height: 35px;">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="input-add-user">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control inputTask" id="age" name="age">
                    </div>
 
                    <div class="form-group input-add-user">
                        <label for="role" class="form-label">Role</label>
                        <select name="role" id="role" class="custom-select custom-select-sm inputTask" style="border: 1px solid #ced4da;border-radius: .25rem;box-shadow: inset 0 1px 2px rgb(0 0 0 / 8%); height: 35px;">
                            <option value="Manager">Manager</option>
                            <option value="Employee">Employee</option>
                        </select>
                    </div>
					    </div>

    			<div class="col-md-6">
                        <div class="input-add-user">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control inputTask" id="address" name="address">
                    </div>

                    <div class="input-add-user">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" class="form-control inputTask" id="email" name="email">
                    </div>

                    <div class="input-add-user">
                        <label for="numberPhone" class="form-label">Number phone</label>
                        <input type="text" class="form-control inputTask" id="numberPhone" name="numberPhone">
                    </div>

                    <div class="input-add-user">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control inputTask" id="userName" name="userName">
                    </div>

                    <div class="input-add-user">
                        <label for="password" class="form-label">Password</label>
                        <input type="text" class="form-control inputTask" id="password" name="password">
                    </div>
                    
                    <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                                   
					    	</div>
                              
				    	</div>
			    	</div>
			    </div>
	    	</div>
        </div>
    </div>
                    

                    

                
                </form>

                
            </div>
</div>

