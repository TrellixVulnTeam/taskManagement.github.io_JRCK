    <script>
        // Hàm tạo các dropdown select2 từ thẻ select mặc định của html
        function generateSelect2(selector) {
            $(selector).each(function () {
                // Select multiple
                if ($(this).attr('multiple')) {
                    const value = $(this).attr('value');
                    let selectedValue = [];
                    if (value) selectedValue = value.split('__');
                    $(this).select2({
                        placeholder: $(this).attr('placeholder'),
                        dropdownAutoWidth: true,
                        allowClear: true,
                        closeOnSelect: false
                    }).val(selectedValue).trigger('change');
                }
                else { // select single
                    let value = $(this).attr('value');
                    if (!value) value = null;
                    $(this).select2({
                        placeholder: $(this).attr('placeholder'),
                        dropdownAutoWidth: true,
                        allowClear: true,
                    }).val(value).trigger('change');
                }
            });
        }
    </script>
