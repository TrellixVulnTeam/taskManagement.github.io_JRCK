{{>header}}
{{>slidebar}}

<div id = 'rpt' class="display-Report">
            <div class="content-wrapper-header">
                <p> Report </p>
            </div>

            <div class="content-board-main">
            <div class="card-header">
                    <b>Task Progress</b>
                    <div class="card-tools">
                        <button class="ti-printer btn-print" id="print"><i></i> Print</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive" id="printable">
                        <table class="task-progress">
                            <colgroup>
                            <col width="5%">
                            <col width="30%">
                            <col width="15%">
                            <col width="15%">
                            <col width="20%">
                            <col width="15%">
                            </colgroup> 

                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Task</th>
                                <th>Task Detail</th>
                                <th>Completed Task Detail</th>
                                <th>Progress</th>
                                <th>Status</th>
                            </tr></thead>

                            <tbody>
                                {{#each task}}
                                <tr>
                                    <td>{{sum @index 1}}</td>
                                    <td>
                                        <a>
                                            {{this.taskName}}                           </a>
                                        <br>
                                        <small>
                                            Due: {{this.endDate}}                         </small>
                                    </td>
                                    <td class="text-center">{{this.detail}}</td>
                                    <td class="text-center">
                                        {{this.done}}
                                    </td>
                                    <td class="project_progress">
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-green" role="progressbar" aria-valuenow="57" aria-valuemin="0" aria-valuemax="100" style="width: {{this.progress}}">
                                            </div>
                                        </div>
                                        <small>
                                            {{this.progress}} Complete
                                        </small>
                                    </td>
                                    <td class="project-state">
                                        <span class="badge badge-primary">{{this.status}} </span>                      
                                    </td>
                                  </tr>
                                  {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
</div>


<style>
.report, #item-menu-report {
    background-color: #f0f0f0 !important; 
    color: #4c7ebf !important;
  }
</style>