{{>header}}
{{>slidebar}}
<div id = 'display-task' class="display-task">
            <div class="content-wrapper-header">
                <p> Task List </p>
            </div>

            <div class="content-task-main">
                <div class="task-list-header">
                    <div class="tool-addnew">
                        <a href="/tasks/create" class="btn-add-new-task">
                            <i class="ti-new-window">Add New Task</i>
                        </a>
                    </div>

                </div>
                <div class="task-list-main">
                    <div class="task-list-wrapper">
                        <div class="row" id = "row-search-task">
                            <form action="/tasks/search" method="POST"> 
                                <label for="taskName" class="search-task">
                                Search:
                                <input class="btn-search-task" name= "q"type="search" >
                            </label>
                            </form>
                            

                        </div>
                        <div class="row" style="width: -webkit-fill-available;">
                            <div class="table-task-list">
                                <table class="task-list-body">
                                    <colgroup>
                                    <col width="5%">
                                    <col width="25%">
                                    <col width="20%">
                                    <col width="20%">
                                    <col width="20%">
                                    <col width="10%">
                                    </colgroup> 
        
                                    <thead>
                                    <tr><th>#</th>
                                    <th>Task</th>
                                    <th>Task Started</th>
                                    <th>Task Due Date</th>
                                    <th>Task Status</th>
                                    <th>Evaluation</th>
                                    <th>Action</th>
                                    </tr></thead>
        
                                    <tbody>
                                        {{#each task}}
                                         <tr role="row" class="odd" >
                                            <th class="text-center" style="font-weight: 400;">{{sum @index 1}}</th>
                                            <td style="font-weight: 400;">
                                                <p><b> </b></p>
                                                <p class="truncate">{{this.taskName}}</p>
                                            </td style="font-weight: 300;">
                                            <td style="font-weight: 300;"><b>{{this.startDate}}</b></td>
                                            <td style="font-weight: 300;"><b>{{this.endDate}}</b></td>
                                            <td class="text-center" style="font-weight: 300;">
                                                <span class="badge badge-primary">{{this.status}}</span>		
                                            </td>
                                            <td class="text-center" style="font-weight: 400;">
                                                <span class="">{{this.evaluation}}</span>		
                                            </td>
                                            <td class="text-center sorting_1" style="font-weight: 300;">
                                                <button type="button" class="btn btn-default btn-sm btn-flat border-info wave-effect text-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                Action
                                                </button>
                                                <div class="dropdown-menu" style="">
                                                    <a class="dropdown-item view_project" href="/tasks/show/{{this.slug}}" data-id="{{this._id}}" >View</a>
                                                     <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item" href="/tasks/{{this._id}}/edit">Edit</a>
                                                    <div class="dropdown-divider"></div>
                                                     <a class="dropdown-item delete_project" href="#" data-target="#delete-task-modal" data-toggle="modal" data-id="{{this._id}}">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
</div>

{{!-- Confirm delete task  --}}
<div id="delete-task-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Task</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this task?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-task" type="button" class="btn btn-danger">Delete</button>
        <button  type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- delete  hidden form -->
<form method="POST" name="delete-task-form"> </form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
            var taskId;
            var deleteForm = document.forms['delete-task-form'];
            var btnDeleteUser = document.getElementById('btn-delete-task');
            
            //when dialog confirm clicked
            $('#delete-task-modal').on('show.bs.modal', function(event) {
                var button = $(event.relatedTarget);
                taskId = button.data('id');
            });

            btnDeleteUser.onclick = function() {
            deleteForm.action = '/tasks/' + taskId +'?_method=DELETE';
            deleteForm.submit();
            }
     });

</script>

<style>
.task, #item-menu-task {
    background-color: #f0f0f0 !important; 
    color: #4c7ebf !important;
  }
</style>
